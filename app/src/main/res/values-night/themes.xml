<resources>
    <!-- Base application theme. -->
    <style name="Theme.MANITHostelAssist" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="fontFamily">@font/noto_sans</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="entry_exit_slip_textview_headline_theme" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/outfit_bold</item>
        <item name="android:fontFamily">@font/outfit_bold</item>
    </style>
    <style name="entry_exit_slip_textview_regular_font" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/outfit</item>
        <item name="android:fontFamily">@font/outfit</item>
    </style>
    <style name="entry_exit_slip_textview_light_font" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/outfit_light</item>
        <item name="android:fontFamily">@font/outfit_light</item>
    </style>

    <style name="entry_exit_slip_textview_semi_bold_theme" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/outfit_semibold</item>
        <item name="android:fontFamily">@font/outfit_semibold</item>
    </style>
    <style name="entry_exit_slip_material_button_theme" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/outfit_semibold</item>
        <item name="android:fontFamily">@font/outfit_semibold</item>
    </style>
</resources>