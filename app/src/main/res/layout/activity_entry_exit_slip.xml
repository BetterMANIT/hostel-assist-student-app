<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2_light"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/backspan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:elevation="10dp"
        android:translationY="-20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center|left"
                android:layout_margin="20dp"
                android:background="#00000000"
                android:src="@drawable/arrow_back_ios_24dp_5f6368_fill0_wght400_grad0_opsz24"
                android:tint="@color/white"
                android:visibility="gone"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Hostel Assist"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/exit_slip"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Loading...."
            android:textColor="@color/color2"
            android:textSize="28sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/slipframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/color1"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Exit Slip"
                android:textColor="#e4e4e4"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/stu_pic"
                android:layout_width="105dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"
                android:src="@drawable/img" />

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_bg"
                android:backgroundTint="#e4c5df"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Name: Salmon Khan"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/entry_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Entry No: 22092024C1003"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/room_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Room: C101"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Date: 22/09/2024"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/exit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Exit Time: 10:30 AM"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/scholar_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scholar No: 1234567"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/enter_again"
                style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="#C30859"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Enter Again"
                android:textColor="?attr/colorOnPrimary"
                app:icon="@drawable/login_24dp_5f6368_fill0_wght400_grad0_opsz24"
                app:iconGravity="textStart"
                app:elevation="4dp"
                app:iconTint="@color/white" />

        </LinearLayout>
        <!-- Watermark -->
        <TextView
            android:id="@+id/watermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.7"
            android:animation="@anim/watermark_animation"
            android:rotation="-35"
            android:elevation="10dp"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="20sp" />


    </FrameLayout>

</LinearLayout>